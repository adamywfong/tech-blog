<form class="m-1 p-1 border rounded" id="login-form" data-login="true">
  <h2 class="rounded-top bg-dark text-white card-header m-1 p-1" id="login-header">Login</h2>
  <div class="form-group m-1 p-1">
    <label for="name-login">Username</label>
    <input type="text" class="form-control" id="name-login" placeholder="Enter username">
  </div>
  <div class="form-group m-1 p-1">
    <label for="password-login">Password</label>
      <input type="password" class="form-control" id="password-login" placeholder="Password">
  </div>
  <div class="d-grid gap-1 my-1 mx-2">
    <button type="submit" class="btn btn-primary mt-1" id="loginButton">Log In</button>
  </div>
  <button class="btn btn-link mb-1" type="button" id="login-toggle">Sign up instead</button>
</form>

<script src="/js/login.js"></script>