<form id="login-form" data-login="true">
  <h1 id="login-header"> <strong>Login</strong> </h1>
  <div class="form-group">
    <label for="name-login">E-mail Address</label>
    <input type="text" class="form-control" id="name-login" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label for="password-login">Password</label>
      <input type="password" class="form-control" id="password-login" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary" id="loginButton">Log In</button>
</form>
<button class="btn btn-secondary" id="login-toggle">Sign up instead</button>