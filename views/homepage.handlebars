<div id="posts">
  {{#each posts as |post|}}
  <div class="card">
    <div class="card-header">
      <a class="card-title" href="/posts/{{post.id}}">{{post.title}}</a>
      <p class="date">Posted by {{post.user.name}} on {{format_date post.createdAt}}</p>
    </div>
    <div class="card-body">
      <p>{{post.text}}</p>
    </div>
  </div>
  {{/each}}
</div>