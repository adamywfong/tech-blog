<form id="update-form" data-postID="{{post.id}}">
  <h1 id="form-header"> <strong>Edit Post</strong> </h1>
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" class="form-control" id="post-title" placeholder="Enter Title" value="{{post.title}}">
  </div>
  <div class="form-group">
    <label for="post-content">Content</label>
      <input type="text" class="form-control" rows=3 id="post-content" placeholder="Enter your text" value="{{post.text}}">
  </div>
  <button type="submit" class="btn btn-primary" id="submit-post">Update Post</button>
  <button class="btn btn-primary" id="delete-post">Delete</button>
</form>

<script src="/js/editor.js"></script>